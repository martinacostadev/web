---
import BlogPreview from '../components/BlogPreview/index.jsx';
import Layout from '../layouts/Layout.astro';

const blogs = (await Astro.glob('./blog/**/*.md'))
	.filter(({ frontmatter }) => !!frontmatter.publishDate)
	.sort((a, b) => new Date(b.frontmatter.publishDate).valueOf() - new Date(a.frontmatter.publishDate).valueOf());
---
<Layout
	title="Blog de programación | Martín Acosta | Artículos sobre desarrollo web"
	description="Blog de Martín Acosta sobre programación, desarrollo web, JavaScript, TypeScript, React, Next.js, buenas prácticas y consejos para desarrolladores frontend."
>
	<h1>Últimos artículos</h1>
	<div class="flex flex-col md:flex-row">
		{blogs.map((blog) => <BlogPreview blog={blog} />)}
	</div>
</Layout>
