---
import Layout from '../layouts/Layout.astro';

const projects = [
  {
    title: 'Frontend Help',
    description: '¿No sabes por dónde empezar en el desarrollo frontend? Recomendaciones y recursos para comenzar y avanzar como desarrollador web.',
    tags: ['Next.js', 'TypeScript', 'ChakraUI'],
    link: 'https://frontendhelp.vercel.app/'
  },
  {
    title: 'Github',
    description: 'Todos mis proyectos open source en Github: aplicaciones web, herramientas y experimentos con React, Next.js y TypeScript.',
    tags: ['Next.js', 'TypeScript', 'TailwindCSS', 'Shadcn UI', 'Supabase', 'Postgres'],
    link: 'https://github.com/martinacostadev'
  },
];
---

<Layout
  title="Proyectos de desarrollo web | Martín Acosta | React, Next.js, TypeScript"
  description="Proyectos de desarrollo web de Martín Acosta. Aplicaciones frontend con React, Next.js, TypeScript, TailwindCSS y más. Código open source en GitHub."
>
  <h1>Proyectos</h1>
  <div class="projects-grid">
    {projects.map((project) => (
        <article class="project-card">
          <a href={project.link} target="_blank" rel="noopener noreferrer" class="project-content">
              <div>
                <h3>{project.title}</h3>
                <p>{project.description}</p>
              </div>
              <div>
                <div class="tags">
                  {project.tags.map((tag) => (
                    <span class="tag">{tag}</span>
                  ))}
                </div>
                <span class="project-link">
                  Ver proyecto &rarr;
                </span>
              </div>
          </a>
        </article>
    ))}
  </div>
</Layout>

<style>
  .projects-grid {
    margin-top: 1.5rem;
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }

  .project-card {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    background: var(--card-bg);
    border: 1px solid var(--border-color);
    border-radius: 0.75rem;
    padding: 1.5rem;
    transition: border-color 0.15s ease, background-color 0.2s ease;
  }

  .project-card:hover {
    border-color: var(--text-muted);
  }

  .project-card h3 {
    margin-top: 0;
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
  }

  .project-card p {
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
    line-height: 1.6;
    font-size: 0.9rem;
  }

  .project-content {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    text-decoration: none;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
    margin-bottom: 1rem;
  }

  .tag {
    background: var(--tag-bg);
    color: var(--tag-text);
    padding: 0.2rem 0.625rem;
    border-radius: 2rem;
    font-size: 0.75rem;
  }

  .project-link {
    color: var(--accent);
    font-size: 0.875rem;
    text-decoration: none;
  }

  .project-link:hover {
    color: var(--accent-hover);
  }
</style>
