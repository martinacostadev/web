<style>
  .not-found {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 60vh;
    text-align: center;
  }

  .not-found h1 {
    font-size: 4rem;
    font-weight: 900;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
  }

  .not-found p {
    color: var(--text-secondary);
    font-size: 1.1rem;
    margin-bottom: 2rem;
  }

  .not-found a {
    color: var(--accent);
    text-decoration: none;
    font-size: 0.9rem;
  }

  .not-found a:hover {
    color: var(--accent-hover);
  }
</style>
