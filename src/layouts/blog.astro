---
import Footer from '../components/Footer/index.jsx';
import MainHead from '../components/MainHead.astro';
import Nav from '../components/Nav/index.jsx';

const { content } = Astro.props;
---

<html lang={content.lang || 'es'}>
	<head>
		<MainHead title={content.title} description={content.description} />
		<script is:inline>
			(function() {
				const saved = localStorage.getItem('theme');
				if (saved) {
					document.documentElement.setAttribute('data-theme', saved);
				} else if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
					document.documentElement.setAttribute('data-theme', 'dark');
				} else {
					document.documentElement.setAttribute('data-theme', 'light');
				}
			})();
		</script>
		<style lang="scss">
			.hero {
				padding: 2rem 1.5rem;
				display: flex;
				background-repeat: no-repeat;
				background-size: cover;
				min-height: 20vw;
				color: white;
				flex-direction: column;
				align-items: center;
				justify-content: center;
				background-color: var(--bg-secondary);
			}

			.tag {
				margin-left: 0.5em;
				margin-right: 0.5em;
				text-transform: uppercase;
				font-size: 0.75rem;
				color: var(--text-muted);

				&:nth-of-type(1n) {
					color: var(--c-green);
				}
				&:nth-of-type(2n) {
					color: var(--c-orange);
				}
				&:nth-of-type(3n) {
					color: var(--c-blue);
				}
				&:nth-of-type(4n) {
					color: var(--c-pink);
				}
			}

			.title {
				font-size: var(--f-u4);
				font-weight: 900;
				text-transform: uppercase;
				letter-spacing: 0.0625em;
				color: var(--text-primary);
			}

			.leadIn {
				color: var(--text-primary);
				border-bottom: 1px solid var(--border-color);
			}

			.tagline {
				font-weight: 300;
				font-size: var(--f-u2);
				line-height: 1.5;
				color: var(--text-secondary);
			}

			.content {
				font-size: 1rem;
				line-height: 2;
				color: var(--text-secondary);
				max-width: 680px;
				margin: 0 auto;
				padding: 0 1.5rem;
			}

			.wrapper {
				max-width: 680px;
				margin: 0 auto;
				padding-left: 1.5rem;
				padding-right: 1.5rem;
			}

			footer a {
				border: 1px solid var(--border-color);
				border-radius: 2rem;
				padding: 0.5rem 1rem;
				text-decoration: none;
				color: var(--accent);
				font-size: 0.875rem;
				transition: border-color 0.15s ease;

				&:hover {
					border-color: var(--text-muted);
				}
			}
		</style>
	</head>
	<body>
		<Nav client:load />
		<header style={`background-image:url(${content.img})`} class="hero">
			<h3 class="title">{content.title}</h3>
		</header>
		<div class="leadIn">
			<div class="wrapper pt8 pb8 mb8">
				{content.tags.map((t) => <span class="tag">{t}</span>)}
				<h3 class="tagline">{content.description}</h3>
			</div>
		</div>
		<div class="wrapper">
			<div class="content"><slot /></div>
		</div>
		<footer class="tac mt12">
			<a href="/blog">
				Ver m√°s publicaciones
			</a>
		</footer>
		<Footer />
	</body>
</html>
