---
import Footer from '../components/Footer/index.jsx';
import MainHead from '../components/MainHead.astro';
import Nav from '../components/Nav/index.jsx';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Mart√≠n Acosta | Software Engineer Senior' } = Astro.props;
---

<html lang="es">
  <head>
    <MainHead title={title} description={description} />
  </head>
  <body>
    <Nav />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  body {
    padding: 0;
    margin: 0 auto;
  }

  main {
    padding: 0 2rem;
    margin: 0;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    max-width: 1024px;
    margin: 0 auto;
    margin-top: 4rem;
  }
</style>
